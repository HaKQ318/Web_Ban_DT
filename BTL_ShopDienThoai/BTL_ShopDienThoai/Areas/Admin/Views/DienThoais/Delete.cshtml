@model BTL_ShopDienThoai.Models.DienThoai

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h3 style="display: flex; justify-content: center; font-size: 35px; font-weight: 400; color:red">Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
    <div style="width:96%; margin:20px auto 0px auto">
        @* <h4>DienThoai</h4>*@
        <hr />
        <dl class="dl-horizontal" style=" margin-top:20px">
            <dt>
                @Html.DisplayNameFor(model => model.MaDT)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaDT)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TenDT)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenDT)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ThuongHieu)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ThuongHieu)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Anh)
            </dt>

            <dd>
                @{
                    //Lấy đường dẫn
                    string ImagePath = "~/wwwroot/ANHDIENTHOAI/" + Model.Anh;
                }
                <img src="@Url.Content(ImagePath)" width="300" class="img-thumbnail" />
                <br />
                @Html.DisplayFor(model => model.Anh)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Gia)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Gia)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SoLuong)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoLuong)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Mota)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mota)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style=" text-align: center">
                <input type="submit" style="font-size: 18px; margin-top: 22px; background-color:aquamarine;color:red;" value="Xóa" class="btn btn-default" /> 
                
            </div>
            <button style="font-size: 18px; margin-top: 22px; background-color: aquamarine; color: red;">
                <a href="@Url.Action("Index","DienThoais")" style="text-decoration:none; color:red">Quay lại</a>
            </button>
        }
    </div>
    @if (ViewBag.Error != null)
    {
        <br />
        <div class="alert alert-danger" role="alert">@ViewBag</div>
    }
</div>

