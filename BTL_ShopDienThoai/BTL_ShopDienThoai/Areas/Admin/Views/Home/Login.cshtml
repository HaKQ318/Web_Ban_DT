@model BTL_ShopDienThoai.Models.TaiKhoan

@{
    ViewBag.Title = "Login";
}

@*<h2>Login</h2>*@
@{
    Layout = null;
}

@*<h2>DangNhap</h2>*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Page Title - SB Admin</title>
    <link href="~/Areas/Admin/Assets/css/styles.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Assets/js/all.min.js"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-4" style="margin-top:200px">
                            <div class="card">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                                <div class="card-body" style="height:auto">
                                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                             @Html.LabelFor(m => m.TenDN)
                                            @Html.TextBoxFor(m => m.TenDN, "", new { @class = "form-control", @placeholder = "Email" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.MatKhau)
                                            @*@Html.PasswordFor(m => m.MatKhau,"")*@
                                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                                <label class="custom-control-label" for="rememberPasswordCheck">Nhớ mật khẩu</label>
                                            </div>
                                        </div>
                                        <div class="form-group" style="text-align:center">
                                            <input type="submit" name="submit" class="btn btn-primary"
                                                   value="Đăng nhập" />

                                        </div>
                                    }
                                </div>
                                <p style="text-align:center; color:red;">@ViewBag.error</p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </main>
        </div>
        
    </div>
    <script src="~/Areas/Admin/Assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/scripts.js"></script>
</body>
</html>

